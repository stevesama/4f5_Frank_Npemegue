<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import echecs.frontal.vues.controles.FlexBoxPolice?>

<HBox xmlns:fx="http://javafx.com/fxml"
    fx:controller="echecs.frontal.vues.fragments.FragmentPolice" 
    styleClass="conteneur,fragment-police">

    <Pane styleClass="grand-espace-horizontal"/>

    <FlexBoxPolice HBox.hgrow="ALWAYS" styleClass="conteneur,police">

        <Label
            fx:id="labelPolice"
            styleClass="label-police">
        </Label>

        <Pane HBox.hgrow="ALWAYS" minHeight="20"/>

        <Button 
            fx:id="boutonOuvrirParametre" 
            text="%ouvrirParametre"
            styleClass="gros-bouton">
        </Button>

    </FlexBoxPolice>

    <Pane styleClass="grand-espace-horizontal"/>

</HBox>
